#include "roBa.dtsi"
#include <dt-bindings/input/input-event-codes.h>

&default_transform {
    col-offset = <6>;
};

&kscan0 {
        col-gpios
            = <&xiao_d 10 GPIO_ACTIVE_HIGH>
            , <&xiao_d 9 GPIO_ACTIVE_HIGH> 
            , <&xiao_d 8 GPIO_ACTIVE_HIGH> 
            , <&xiao_d 7 GPIO_ACTIVE_HIGH> 
            , <&gpio0 10 GPIO_ACTIVE_HIGH>
            ;
};

// PMW3610 trackball configuration for auto mouse layer
&spi0 {
    status = "okay";
    compatible = "nordic,nrf-spim";
    pinctrl-0 = <&spi0_default>;
    pinctrl-1 = <&spi0_sleep>;
    pinctrl-names = "default", "sleep";
    cs-gpios = <&gpio0 9 GPIO_ACTIVE_LOW>;

    trackball_device: trackball@0 {
        status = "okay";
        compatible = "pixart,pmw3610";
        reg = <0>;
        spi-max-frequency = <2000000>;
        motion-gpios = <&gpio0 2 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
        
        // Required axis definitions for cursor movement
        zephyr,axis-x = <INPUT_REL_X>;
        zephyr,axis-y = <INPUT_REL_Y>;
        
        // CPI resolution setting
        res-cpi = <400>;
        
        // Auto mouse layer configuration
        automouse-layer = <4>;          // Layer 4 is MOUSE layer
        scroll-layers = <5>;            // Layer 5 is SCROLL layer
        
        // Sensor behaviors
        force-awake;
        smart-mode;
    };
};

/ {
    // PMW3610 trackball input listener for auto mouse layer (R side only)
    trackball_listener: trackball_listener {
        compatible = "zmk,input-listener";
        device = <&trackball_device>;
        status = "okay";
    };
};


